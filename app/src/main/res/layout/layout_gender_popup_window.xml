<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_bg"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp">

    <ImageView
        android:id="@+id/mIvClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@mipmap/ugcbook_delete" />

    <ImageView
        android:id="@+id/mIvGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mIvClose"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/ic_gender_logo" />

    <TextView
        android:id="@+id/mTvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mIvGender"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="我们会根据您的喜好\n推荐相对应的小说"
        android:textColor="@color/common_h2"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/mTvSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mTvContent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="-请选择您的喜好-"
        android:textColor="@color/common_h2"
        android:textSize="11dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mTvSelect"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mBtnMale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="男生小说"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_male_button_selector"/>

        <Button
            android:id="@+id/mBtnFemale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:text="女生小说"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_female_button_selector"/>
    </LinearLayout>
</RelativeLayout>