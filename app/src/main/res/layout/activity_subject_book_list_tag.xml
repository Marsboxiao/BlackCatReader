<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/tablayoutSubject"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="center"
                app:tl_indicator_color="@color/colorIndictor"
                app:tl_indicator_gravity="BOTTOM"
                app:tl_indicator_style="TRIANGLE"
                app:tl_tab_width="90dp"
                app:tl_textSelectColor="@color/colorCheaked"
                app:tl_textUnselectColor="@color/colorSelected"
                app:tl_underline_color="@color/colorPrimary"
                app:tl_underline_height="1dp">
            </com.flyco.tablayout.SlidingTabLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpagerSubject"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

        <com.mars.blackcat.view.ReboundScrollView
            android:id="@+id/rsvTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_gray_bg"
            android:visibility="gone">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_gray_bg"
                android:paddingTop="10dp" />
        </com.mars.blackcat.view.ReboundScrollView>
    </FrameLayout>

</LinearLayout>